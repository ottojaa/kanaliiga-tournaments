{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "allowJs": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "noImplicitAny": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"]
  },
  "exclude": ["typings/browser.d.ts", "typings/browser", "node_modules", "scripts.js"],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
